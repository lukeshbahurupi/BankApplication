@model BankApplication.Models.ApplicationForm

@{
    ViewBag.Title = "Details";
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">@Model.CustemerName</h2>
                    <ul class="list-group">
                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.ApplicationDate)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.ApplicationDate)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.CustemerName)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.CustemerName)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.Gender)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.Gender)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.BirthDate)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.BirthDate)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.Age)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.Age)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.EmailId)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.EmailId)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.PancardNumber)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.PancardNumber)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.AadhaarCardNumber)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.AadhaarCardNumber)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.PermanentAddress)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.PermanentAddress)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.CurrentAddress)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.CurrentAddress)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.LoanType)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.LoanType)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.RequiredLoanAmount)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.RequiredLoanAmount)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.RateOfInterest)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.RateOfInterest)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.LoanTenureInMonth)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.LoanTenureInMonth)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.LoanEMI)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.LoanEMI)
                            </span>
                        </li>

                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.Summary)
                            </strong>

                            <span class="float-right">
                                @Html.DisplayFor(model => model.Summary)
                            </span>
                        </li>
                        <li class="list-group-item">
                            <strong>
                                @Html.DisplayNameFor(model => model.LoanStatus)
                            </strong>
                            @if (Model.LoanStatus == null)
                            {


                                <span class="float-right">
                                    <i class="fa fa-spinner"></i> Pending
                                </span>
                            }
                            else
                            {
                                if (Model.LoanStatus == "true")
                                {
                                    <span class="float-right">
                                        <i class="fa fa-check-circle"></i> Approved
                                    </span>
                                }
                                else
                                {
                                    <span class="float-right">
                                        <i class="fa fa-minus-circle"></i> Rejected
                                    </span>
                                }

                            }
                        </li>
                        @foreach (var el in Model.FileDetails)
                        {
                            <li class="list-group-item">

                                <strong>
                                    @el.FileName
                                </strong>

                                <span class="float-right">
                                    @Html.ActionLink("Download", "Download", "ApplicationForm", new { p = el.Id + el.Extension, d = el.FileName })
                                </span>
                                
                            </li>
                            }
                        <li class="list-group-item text-center">
                            <p>
                                <a href="/ApplicationForm/Edit/@Model.ApplicationID" class="text-bg-secondary">Edit</a>
                            </p>
                        </li>
                        <li class="list-group-item text-center">
                            <p>
                                <a href="/ApplicationForm/index" class="text-bg-secondary">Back To List</a>
                            </p>
                        </li>
                        </ul>                    
                </div>
            </div>
        </div>
    </div>
</div>